<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/insurancedetails"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/insuranceforcardbackground"
>

        <!-- Header Card -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_insuranceperson" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/onlyforcard"
                >

                <!-- Owner Name -->
                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Owner Name"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

                <!-- Mobile Number -->
                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Mobile: 1234567890"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <!-- Vehicle Details -->
                <TextView
                    android:id="@+id/tvVehicleDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle: Make - Model (Class)"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/onlyforcard">

                <!-- State -->
                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="State: State Name"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Registration Number -->
                <TextView
                    android:id="@+id/tvRegNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Registration No: ABC123"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Registration Date -->
                <TextView
                    android:id="@+id/tvRegDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Registration Date: 01/01/2023"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Address -->
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Address: 123 Main St, City"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Engine Number -->
                <TextView
                    android:id="@+id/tvEngineNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Engine No: 123456789"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Chassis Number -->
                <TextView
                    android:id="@+id/tvChassisNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Chassis No: 987654321"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Vehicle Make -->
                <TextView
                    android:id="@+id/tvVehicleMake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Vehicle Make: Toyota"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Vehicle Model -->
                <TextView
                    android:id="@+id/tvVehicleModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Vehicle Model: Corolla"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Fuel Type -->
                <TextView
                    android:id="@+id/tvFuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Fuel Type: Petrol"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Sale Amount -->
                <TextView
                    android:id="@+id/tvSaleAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Sale Amount: $10,000"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Seat Capacity -->
                <TextView
                    android:id="@+id/tvSeatCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seat Capacity: 5"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>