<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Backward Button -->
    <ImageButton
        android:id="@+id/backwordbtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/ic_backward"
        />

    <!-- Logo and Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/logomaruthi" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Maruthi Consultancy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Title Text: Choose Action -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="Update Costumer"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Property Type Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="PropertyType:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- Floating label for Property Type -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/propertyTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="Update Property Type "
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Name Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="53dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Name"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Phone Number Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ph_No:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="47dp"
            android:elevation="3dp">

            <EditText
                android:id="@+id/phono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Phone No"
                android:inputType="phone"
                android:maxLength="10" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Date Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Date:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="65dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="Update Date"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Area Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Area:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Area -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="65dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/areatext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Area" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Category Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Category:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Category -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="27dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/categoryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="Update category"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Range Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Range"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Range -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="59dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/rangeamEdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Amount" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Looking For Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Looking For:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Floating label for Looking For -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/lookingEdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Looking For" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Facing Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Facing:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Facing -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="47dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/facingedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Facing"
                android:clickable="true"
                android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Remarks Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Remarks:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Floating label for Remarks -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Remarks" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Buttons Section -->

        <Button
            android:id="@+id/updateCustumerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customer_background"
            android:text="Update_Costumer"
            android:layout_marginTop="35dp"
            android:textColor="@color/white" />


</LinearLayout>
</androidx.core.widget.NestedScrollView>